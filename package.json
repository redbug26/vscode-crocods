{
  "name": "crocods",
  "displayName": "CrocoDS",
  "description": "",
  "publisher": "Kyuran",
  "license": "MIT",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
		"type": "git",
		"url": "https://github.com/redbug26/vscode-crocods.git"
	},
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {      
      "configuration": {
        "title": "Uncrustify",
        "properties": {
            "crocods.executablePath.linux": {
                "type": "string",
                "default": "",
                "description": "Full path to crocoDS executable (Linux)",
                "scope": "window"
            },
            "crocods.executablePath.osx": {
                "type": "string",
                "default": "",
                "description": "Full path to crocoDS executable (macOS)",
                "scope": "window"
            },
            "crocods.executablePath.windows": {
                "type": "string",
                "default": "",
                "description": "Full path to crocoDS executable (Windows)",
                "scope": "window"
            }
          }
        },
    "commands": [
      {
        "command": "crocods.helloWorld",
        "title": "CrocoDS: Hello World"
      },
      {
        "command": "crocods.run",
        "title": "CrocoDS: Run"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
